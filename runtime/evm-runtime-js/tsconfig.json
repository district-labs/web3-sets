{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "abitype": ["./node_modules/abitype"],
      "abitype/zod": ["./node_modules/abitype/zod"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
